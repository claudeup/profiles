{
  "name": "kubernetes",
  "description": "Kubernetes manifest development and cluster management. Includes YAML editing, kubectl integration, and Helm chart support.",
  "plugins": [
    "superpowers@superpowers-marketplace",
    "episodic-memory@superpowers-marketplace",
    "commit-commands@claude-code-plugins"
  ],
  "mcpServers": [],
  "marketplaces": [
    {
      "source": "github",
      "repo": "anthropics/claude-code-plugins"
    },
    {
      "source": "github",
      "repo": "obra/superpowers-marketplace"
    }
  ],
  "detect": {
    "files": ["deployment.yaml", "service.yaml", "kustomization.yaml", "Chart.yaml"],
    "contains": {
      "deployment.yaml": "kind: Deployment",
      "service.yaml": "kind: Service"
    }
  }
}
