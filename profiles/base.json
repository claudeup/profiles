{
  "name": "base",
  "description": "base marketplaces and plugins",
  "marketplaces": [
    {
      "source": "github",
      "repo": "anthropics/claude-plugins-official"
    },
    {
      "source": "github",
      "repo": "jarrodwatts/claude-hud"
    },
    {
      "source": "github",
      "repo": "obra/superpowers-marketplace"
    },
    {
      "source": "github",
      "repo": "pchalasani/claude-code-tools"
    },
    {
      "source": "github",
      "repo": "thedotmack/claude-mem"
    }
  ],
  "perScope": {
    "user": {
      "plugins": [
        "claude-hud@claude-hud",
        "claude-mem@thedotmack",
        "episodic-memory@superpowers-marketplace",
        "feature-dev@claude-plugins-official",
        "gopls-lsp@claude-plugins-official",
        "hookify@claude-plugins-official",
        "pr-review-toolkit@claude-plugins-official",
        "safety-hooks@cctools-plugins",
        "superpowers@superpowers-marketplace"
      ],
      "mcpServers": [
        {
          "name": "context7",
          "command": "npx",
          "args": ["-y", "@upstash/context7-mcp"],
          "scope": "user"
        }
      ]
    }
  },
  "localItems": {
    "agents": ["test-runner/test-runner.md"],
    "commands": [
      "commit.md",
      "create-release.md",
      "recovery-prompt.md",
      "update-memory.md"
    ],
    "skills": ["bash", "golang", "pr-comments"],
    "hooks": [
      "block-dangerous-commands.sh",
      "format-on-save.sh",
      "log-bash-commands.sh",
      "markdown_formatter.py",
      "protect-sensitive-files.sh"
    ],
    "output-styles": ["technical-evangelist.md"]
  }
}
